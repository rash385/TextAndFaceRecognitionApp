<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/footer"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_date_fb"
        tools:text="Date"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#909090"
        android:textSize="13sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rl_likes_fb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorDivider" />

    <TextView
        android:id="@+id/tv_likes_count_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_date_fb"
        android:layout_alignBottom="@+id/tv_date_fb"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@+id/rl_likes_fb"
        android:layout_toStartOf="@+id/rl_likes_fb"
        android:lines="1"
        android:text="1000"
        android:textColor="#909090"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>